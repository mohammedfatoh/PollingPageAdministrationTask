@model Poll
@foreach (var question in Model.Questions)
{
    <li>
        <h3>@question.Text</h3>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>

        <ul>
            @foreach (var answer in question.Answers)
            {
                <li>@answer.Text</li>
            }
        </ul>
    </li>
}